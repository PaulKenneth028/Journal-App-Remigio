<h1>Create an Account</h1>

<% if @registereduser.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@registereduser.errors.count, "error") %> unable to submit registration:</h2>
    <ul>
      <% @registereduser.errors.each do |attribute, message|  %>
        <li><%= "#{attribute.to_s.humanize} #{message}" %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @registereduser, url: new_user_path, local: true) do |form| %>
    <div>
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>
  
    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
  
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
  
    <div>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>
  
    <div>
      <%= form.submit 'Register' %>
    </div>
  <% end %>
